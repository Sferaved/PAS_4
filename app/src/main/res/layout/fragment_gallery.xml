<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background_color_new"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:fontFamily="@font/regular"
        android:minHeight="30sp"
        android:textAlignment="center"
        android:textColor="#D9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        android:layout_marginTop="4dp"
        android:divider="@color/colorAccent"
        android:dividerHeight="1sp"
        android:fontFamily="@font/regular"
        android:scrollbarThumbVertical="@drawable/scrollbar_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/listView">

        <ImageButton
            android:id="@+id/scrollButtonUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_button_background"
            android:src="@drawable/up_arrow"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/scrollButtonDown"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />


        <ImageButton
            android:id="@+id/scrollButtonDown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_button_background"
            android:src="@drawable/down_arrow"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/scrollButtonUp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constr_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="454dp"
        tools:ignore="MissingConstraints">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/del_but"
       android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/regular"
        android:text="@string/delete_routs"
        android:textAlignment="center"
        android:textColor="#D9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_routs"
       android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="12sp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/regular"
        android:text="@string/order"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_cost" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCallAdmin"
       android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="12sp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/regular"
        android:text="@string/call_admin"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textView_textSize"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_routs" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_minus"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/text_view_cost"
        app:layout_constraintTop_toBottomOf="@+id/btnBonus" />

    <TextView
        android:id="@+id/text_view_cost"
        android:layout_width="100sp"
        android:layout_height="60sp"

        android:layout_marginTop="16dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/light"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBonus"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plus"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/text_view_cost"
        app:layout_constraintTop_toBottomOf="@+id/btnBonus"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
       android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/regular"
        android:text="@string/add_services"
        android:textAlignment="center"
        android:textColor="#D9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBonus"
       android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="12sp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/regular"
        android:text="@string/btn_bonus"
        android:textAlignment="center"
        android:textColor="#D9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="60sp"
        android:layout_height="60sp"

        android:layout_marginTop="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/del_but" />

    <TextView
        android:id="@+id/schedule"
        android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/light"


        android:textColor="@color/white"
        android:textColorHint="#ABD9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/shed_down"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input"
        android:src="@drawable/down_arrow_white"
        app:layout_constraintEnd_toEndOf="@+id/schedule"
        app:layout_constraintTop_toTopOf="@+id/schedule" />

</androidx.constraintlayout.widget.ConstraintLayout>

