<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_new">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_accents"
            android:contentDescription="TODO"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/arrow_back_fill0_wght400_grad0_opsz24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textResult"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/light"
            android:text="@string/text_result"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_full_message"
            app:layout_constraintTop_toBottomOf="@+id/btn_no" />

        <TextView
            android:id="@+id/text_full_message"

            android:layout_width="293sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:minHeight="48sp"
            android:textColor="#D9D9D9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textResult"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textStatus"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4sp"
            android:fontFamily="@font/light"
            android:text="@string/textStatus"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_full_message"
            app:layout_constraintTop_toBottomOf="@+id/carProgressBar" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.taxi_pas_4.utils.animation.car.CarProgressBar
            android:id="@+id/carProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            app:carImage="@drawable/button_image_button2"
            app:layout_constraintTop_toBottomOf="@+id/text_full_message" />



        <TextView
            android:id="@+id/text_status"

            android:layout_width="293sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:minHeight="48sp"
            android:textColor="#D9D9D9"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textStatus"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reset_status"
            android:layout_width="293sp"
            android:layout_height="48dp"

            android:layout_marginTop="8dp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/regular"
            android:text="@string/textStatus"
            android:textAlignment="center"
            android:textColor="#D9D9D9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_status" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel_order"
            android:layout_width="293sp"
            android:layout_height="48dp"

            android:layout_marginTop="8sp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/regular"
            android:text="@string/cancel_order"
            android:textAlignment="center"
            android:textColor="#D9D9D9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_reset_status" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_again"
            android:layout_width="293sp"
            android:layout_height="45sp"

            android:layout_marginTop="8dp"
            android:background="@drawable/buttons"

            android:fontFamily="@font/regular"
            android:text="@string/btn_again_text"
            android:textAlignment="center"
            android:textColor="#D9D9D9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cancel_order" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallAdmin"
            android:layout_width="293sp"
            android:layout_height="45sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/regular"
            android:text="@string/call_admin"
            android:textAlignment="center"
            android:textColor="#D9D9D9"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_again" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>