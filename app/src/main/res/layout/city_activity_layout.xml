<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_background_color">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_1"
        android:layout_width="293sp"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/regular"

        android:textAlignment="center"
        android:textColor="#D9D9D9"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_2"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_3"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_4"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_5"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_6"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_city_7"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exit"
        android:layout_width="293sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_red"

        android:fontFamily="@font/regular"
        android:textAlignment="center"

        android:textColor="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_city_7" />

</androidx.constraintlayout.widget.ConstraintLayout>