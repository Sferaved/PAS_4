<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_new">


    <TextView
        android:id="@+id/komentar"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/light"
        android:text="@string/coment"
        android:textColor="#D9D9D9"

        android:textSize="@dimen/textView_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_tariff" />

    <TextView
        android:id="@+id/komenterinp"
        android:layout_width="0sp"
        android:layout_height="43sp"

        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input"
        android:ems="10"

        android:fontFamily="@font/regular"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/komentar" />

    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/medium"
        android:text="@string/services"

        android:textColor="#D9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/komenterinp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/regular"
        android:text="@string/tar"
        android:textColor="#D9D9D9"
        android:textSize="@dimen/textView_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/list_tariff"
        android:layout_width="160sp"
        android:layout_height="29sp"
        android:layout_marginTop="16sp"
        android:background="#689194"
        android:radius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="33sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintext"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="197sp"
        android:layout_height="@dimen/button_height"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttons"

        android:backgroundTint="@color/wallet_bright_foreground_disabled_holo_light"
        android:fontFamily="@font/regular"
        android:text="@string/ok_error"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
