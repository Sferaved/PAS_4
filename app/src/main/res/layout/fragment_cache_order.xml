<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_new"
    tools:context=".ui.finish.fragm.CacheOrderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cacheOrderFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textResult"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/light"
            android:text="@string/text_result"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_full_message"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_full_message"

           android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:minHeight="@dimen/textView_minHeight"
            android:textColor="#D9D9D9"
            android:textSize="@dimen/textView_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textResult"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/textCost"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/light"
            android:text="@string/text_cost"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_full_message"
            app:layout_constraintTop_toBottomOf="@+id/text_full_message" />

        <TextView
            android:id="@+id/text_cost_message"

           android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:minHeight="@dimen/textView_minHeight"
            android:textColor="#D9D9D9"
            android:textSize="@dimen/textView_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCost"
            tools:ignore="RtlHardcoded" />


        <com.taxi_pas_4.utils.animation.car.CarProgressBar
            android:id="@+id/carProgressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:carImage="@drawable/button_image_button2_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_cost_message" />

        <LinearLayout
            android:id="@+id/progressSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carProgressBar">

            <View
                android:id="@+id/step1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_step_active" />

            <View
                android:layout_width="76dp"
                android:layout_height="4dp"
                android:background="#689194" />

            <View
                android:id="@+id/step2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_step_active" />

            <View
                android:layout_width="76dp"
                android:layout_height="4dp"
                android:background="#689194" />

            <View
                android:id="@+id/step3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_step_inactive" />

            <View
                android:layout_width="76dp"
                android:layout_height="4dp"
                android:background="#689194" />

            <View
                android:id="@+id/step4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_step_inactive" />
        </LinearLayout>

        <TextView
            android:id="@+id/textStatus"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4sp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/light"
            android:text="@string/textStatus"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_full_message"
            app:layout_constraintTop_toBottomOf="@+id/progressSteps" />


        <TextView
            android:id="@+id/countdownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_status" />

        <TextView
            android:id="@+id/text_status"

            android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:minHeight="@dimen/textView_minHeight"
            android:textColor="#D9D9D9"
            android:textSize="@dimen/textView_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressSteps"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCallAdminFin"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttons"
            android:fontFamily="@font/regular"
            android:text="@string/call_admin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textView_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
